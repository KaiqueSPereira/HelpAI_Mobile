<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#25233A"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_person"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaka"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/ivUserImage"
            app:layout_constraintStart_toEndOf="@id/ivUserImage"
            app:layout_constraintBottom_toBottomOf="@id/ivUserImage" />

        <TextView
            android:id="@+id/tvUserAvatarLetter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/avatar_background"
            android:gravity="center"
            android:text="F"
            android:textColor="#100F1C"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/viewStatusDot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/avatar_background"
            app:backgroundTint="@color/statusBadRed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notifications_outline"
            app:tint="#B0AEC3"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvUserAvatarLetter"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Só queria deixar o sistema mais rápido. Agora não temos mais clientes. Nem produtos. Nem dignidade."
            android:textColor="#FFFFFF"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/ivInfo"
            app:layout_constraintStart_toEndOf="@id/ivInfo"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_list"
            app:tint="#B0AEC3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvStatusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Em atividade"
            android:textColor="#B0AEC3"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/ivStatusIcon"
            app:layout_constraintStart_toEndOf="@id/ivStatusIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivStatusIcon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>