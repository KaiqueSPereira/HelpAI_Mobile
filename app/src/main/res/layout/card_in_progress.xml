<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardBackgroundColor="#25233A"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvInProgressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taskys em andamento"
            android:textColor="#B0AEC3"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressTrack"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/progress_bar_track"
            android:rotation="-90"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:max="100"
            android:progress="21"
            android:progressDrawable="@drawable/progress_bar_foreground"
            android:rotation="-90"
            app:layout_constraintTop_toTopOf="@id/progressTrack"
            app:layout_constraintBottom_toBottomOf="@id/progressTrack"
            app:layout_constraintStart_toStartOf="@id/progressTrack"
            app:layout_constraintEnd_toEndOf="@id/progressTrack" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/progressTrack"
            app:layout_constraintBottom_toBottomOf="@id/progressTrack"
            app:layout_constraintStart_toStartOf="@id/progressTrack"
            app:layout_constraintEnd_toEndOf="@id/progressTrack">

            <TextView
                android:id="@+id/tvProgressPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21%"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProgressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:background="@drawable/status_good_background"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Updates: Nov 07 15:36 pm"
            android:textColor="#B0AEC3"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>